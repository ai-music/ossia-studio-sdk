{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "lib": ["dom", "scripthost", "es2018.promise", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
